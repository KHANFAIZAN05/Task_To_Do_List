@model List<TodoList.Controllers.TaskList>

@{
    ViewBag.Title = "Index";
}


<html>
<head>
    <title>ToDoList</title>
</head>
<body>
    <div class="container" style="margin-top:50px">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Task List</h5>
                <p class="card-text">List of All Tasks</p>
            </div>
            <div class="card-body">
                <div class=" row">
                    <div class="col-md-12">
                        @Html.ActionLink("Create New Task", "Create", null, new { @class = "btn btn-sm btn-primary" })

                    </div>

                </div>
                <table class="table table-stripped">
                    <tr>

                        <th>
                            Task Name
                        </th>
                        <th>
                            Task Status
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.TaskName)
                            </td>
                            <td>

                                @Html.DisplayFor(modelItem => item.TaskStatus)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.TaskId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.TaskId })
                            </td>
                        </tr>
                    }

                </table>

            </div>
            <div class="card-footer">
                All Rights Reserved , khanfaizan & &copy;2021
            </div>

        </div>
    </div>
    <div class="container ">
        
     
    </div>

</body>
</html>

