@model TodoList.Controllers.TaskList

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>

<body>

    <div class="container" style="margin-top:50px">
        <div class="card">
            <div class="card-header">
                <h3>Are you sure you want to delete this?</h3>
            </div>
            <div class="card-body">
                <div>

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TaskName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TaskName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TaskStatus)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TaskStatus)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            @Html.ActionLink("Delete", "DeleteConfirmed", new { id = Model.TaskId }, new { @class = "btn btn-sm btn-danger" }) |
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    }
                </div>

            </div>
            <div class="card-footer">
                All Rights Reserved , khanfaizan & &copy;2021

            </div>

        </div>
    </div>

</body>
</html>
